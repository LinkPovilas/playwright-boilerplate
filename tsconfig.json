{
  /* Playwright supports TypeScript out of the box. Playwright reads and transforms tests into JavaScript. */
  "compilerOptions": {
    /* Playwright only supports baseUrl and paths options. */
    "baseUrl": ".",
    /* Strict type checking. */
    "strict": true,
    /* Required by @typescript-eslint/prefer-nullish-coalescing. */
    "strictNullChecks": true,
    /* TS2550 */
    "lib": ["es2021", "dom"]
  }
}
